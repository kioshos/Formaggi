<Window x:Class="Formaggi.View.CountOfCheese"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Formaggi.View"
        mc:Ignorable="d"
        Title="CountOfCheese" Height="300" Width="450">
    <Grid>
        <StackPanel>
            <TextBlock Text="Please, enter the count of cheese: "/>
            <TextBox Text="{Binding OrderNumber, Mode=TwoWay}"/>
            <Button Content="OK" Command="{Binding SetCheeseCountCommand }"></Button>
        </StackPanel>
    </Grid>
</Window>
