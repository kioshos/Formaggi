<Window x:Class="Formaggi.View.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Formaggi.View"
        mc:Ignorable="d"
        Title="StaffWindow" Height="450" Width="800">
    <Grid>
        <!-- додають сир до STORAGE -->
        <StackPanel>
            <TextBlock Text="ADD TO STORAGE"/>
            <TextBlock Text="Quantity"/>
            <TextBox Text="{Binding Quantity, Mode=TwoWay}"/>
            <TextBlock Text="ProductionDate"/>
            <TextBox Text="{Binding ProductionDate, Mode=TwoWay}"/>
            <TextBlock Text="Cheese"/>
            <ComboBox ItemsSource="{Binding Cheeses}" SelectedIndex="{Binding CheeseID}"/>
            <TextBlock Text="PaAgingComplete"/>
            <TextBox Text="{Binding AgingComplete, Mode=TwoWay}"/>
            <TextBlock Text="ExpirationDate"/>
            <DatePicker Text="{Binding ExpirationDate, Mode=TwoWay}"/>
            <TextBlock Text="Price"/>
            <TextBox Text="{Binding Price, Mode=TwoWay}"/>
            <Button Content="Registrate" Command="{Binding AddCheeseToBatchCommand}"/>
        </StackPanel>
    </Grid>
</Window>
